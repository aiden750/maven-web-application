node{
    try{
    
    def mavenHome = tool name: 'maven3.8.6'
    echo "the job name is  ${env.JOB_NAME}"
    echo "the build no. is ${env.BUILD_NUMBER}"
    echo "the node name is ${env.NODE_NAME}"

    
    //checkout code stage
    stage ('checkout code'){
    slackNotification ('started')
        git branch: 'development', credentialsId: '3724172a-88a3-441a-a6a2-988a5bc853cc', url: 'https://github.com/aiden750/maven-web-application.git'
    }
    
    //build
    stage ('build artifact'){
    sh "${mavenHome}/bin/mvn clean package"
    }
    /*
    //sonarQube Report
    stage ('sonarQube report'){
    sh "${mavenHome}/bin/mvn sonar:sonar"  
    }
    
    //uploding artifact
    stage ('uploding to nexus'){
    sh "${mavenHome}/bin/mvn deploy"    
    }
    
    //Deploy app into Tomcat server
    stage ('tomcat server'){
    sshagent(['a6dcd126-09f5-4689-b9a3-d00f9d3c1732']){
    sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.91.26:/opt/apache-tomcat-9.0.68/webapps/"
    }
    }
    */
    }//try closing
    
    catch (e) {
    // If there was an exception thrown, the build failed
    currentBuild.result = "FAILURE"
    throw e
    }
   finally {
    // Success or failure, always send notifications
    slackNotification(currentBuild.result)
  }

    }//node closing
    
//function for slack notification
def slackNotification(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def color = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#AA98A9'
  } else if (buildStatus == 'SUCCESS') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary, channel: '#jenkins')
}
